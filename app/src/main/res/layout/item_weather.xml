<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <ImageView
        android:id="@+id/weatherItemIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/margin_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weatherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="@id/weatherItemIcon"
        app:layout_constraintStart_toEndOf="@id/weatherItemIcon"
        app:layout_constraintTop_toTopOf="@id/weatherItemIcon" />

    <TextView
        android:id="@+id/weatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_large"
        app:layout_constraintBottom_toBottomOf="@id/weatherName"
        app:layout_constraintStart_toEndOf="@id/weatherName"
        app:layout_constraintTop_toTopOf="@id/weatherName" />
</androidx.constraintlayout.widget.ConstraintLayout>